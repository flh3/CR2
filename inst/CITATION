citHeader("To cite CR2 in publications use:")

citEntry(
  entry    = "Article",
  title    = "Using cluster robust standard errors when analyzing group randomized trials with few clusters",
  author   = c(person("Francis",  "Huang"), person("Xintong", "Li")),
  journal  = "Behavior Research Methods",
  year     = "2021",
  url      = "https://rdcu.be/cxyl5",
  textVersion  =
  paste("Huang F., & Li, X. (2021).",
        "Using cluster robust standard errors when analyzing group randomized trials with few clusters.",
        "Behavior Research Methods.",
        "Retrieved from https://rdcu.be/cxyl5.")
)

bibentry(bibtype = "Manual",
         title        = "CR2: Compute cluster robust standard errors with degrees of freedom adjustments",
         author       = personList(as.person("Francis Huang"),
                                   as.person("Bixi Zhang")),
         note = "R package version 0.1.1",
    url = "https://CRAN.R-project.org/package=CR2",
      textVersion  =
  paste("Huang F., & Zhang, B. (2022).",
        "CR2: Compute cluster robust standard errors with degrees of freedom adjustments",
        " https://CRAN.R-project.org/package=CR2")
        )
